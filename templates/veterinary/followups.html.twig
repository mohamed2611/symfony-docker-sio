{% extends 'base.html.twig' %}

{% block title %}Suivis de {{ veterinary.name }}{% endblock %}

{% block body %}
    <h1>Suivis de {{ veterinary.name }}</h1>

	<a href="{{ path('app_follow_up_new') }}" class="btn btn-primary">
		<i class="bi bi-plus"></i>
		Nouveau
	</a>

    {% if followUps is not empty %}
       <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom du Contact</th>
                    <th>Date de l'appel</th>
                    <th>Commentaire</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
                {% for followUp in followUps %}
                    <tr>
                        <td>{{ followUp.id }}</td>
                        <td>{{ followUp.contactName }}</td>
                        <td>{{ followUp.callDate ? followUp.callDate|date('Y-m-d') : '' }}</td>
                        <td>{{ followUp.comment }}</td>
                        <td>
						<a href="{{ path('app_follow_up_show', {'id': followUp.id}) }}">voir</a>
						<a href="{{ path('app_follow_up_edit', {'id': followUp.id}) }}">modifier</a>
					</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>Aucun suivi disponible pour ce vétérinaire.</p>
    {% endif %}
<ul class="liens list-unstyled mt-3">
        <li>
            <a href="{{ path('app_veterinary_index') }}">   
                <i class="bi bi-chevron-left"></i>
                &nbsp;Retour à la liste
            </a>&nbsp;&nbsp;&nbsp;
        </li>
    </ul>
    
{% endblock %}
