{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
    <h1>Liste des Produits</h1>
    <a href="{{ path('app_product_new') }}" class="btn btn-primary">
        <i class="bi bi-plus"></i> Nouveau
    </a>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>prix</th>
                <th>action</th>
                
            </tr>
        </thead>
        <tbody>
       {% for product  in produies %}
            <tr>
                <td>{{product.id}}</td>
                <td>{{product.name}}</td>
                <td>{{product.price }}</td>
                <td>
                    <a href="{{ path('app_product_show', {'id': product.id}) }}">Voir</a>
                    <a href="{{ path('app_product_edit', {'id': product.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">aucun enregistrement trouv√©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    
    
    
{% endblock %}
