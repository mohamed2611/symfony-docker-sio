{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}
{% block body_id %}fiche{% endblock %}
{% block body %}
  
   <h1>Fiche produit</h1>
    
   <table class="table">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ product.id }}</td>
        </tr>
        <tr>
            <th>Nom</th>
            <td>{{ product.name }}</td>
        </tr>
        <tr>
            <th>Prix</th>
            <td>{{ product.price }}</td>
        </tr>

       
        {% if product.updatedAt %}
        <tr>
            <th>Dernière mise à jour</th>
            <td>{{ product.updatedAt|date('d/m/Y H:i', 'Europe/Paris') }}</td>
        </tr>
        {% else %}
        <tr>
            <th>Dernière mise à jour</th>
            <td>Aucune mise à jour effectuée</td>
        </tr>
        {% endif %}
    </tbody>
   </table>

   <a href="{{ path('app_product_index') }}">
        <i class="bi bi-chevron-left"></i> &nbsp;Retour à la liste
    </a>

    <a href="{{ path('app_product_edit', {'id': product.id}) }}">Modifier</a>

    {{ include('product/_delete_form.html.twig') }} 
    
{% endblock %}
