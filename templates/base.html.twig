<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1"/>
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>"> {% block stylesheets %}{% endblock %}

		{% block javascripts %}
			{% block importmap %}
				{{ importmap('app') }}
			{% endblock %}
		{% endblock %}
	</head>
	<body id="{% block body_id %}{% endblock %}"> {% block nav %}{% endblock %}

		<div class="container-md"> {% block body %}{% endblock %}
			</div>

			<nav class="navbar navbar-expand-lg fixed-top bg-primary" data-bs-theme="dark">
				<div class="container-fluid">
					<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
						<span class="navbar-toggler-icon"></span>
					</button>
					<div class="collapse navbar-collapse" id="navbarTogglerDemo01">
						<a class="navbar-brand" href="{{ path('app_home') }}">Galaxy Swiss Bourdin</a>
						<ul class="navbar-nav me-auto mb-2 mb-lg-0">
							<li class="nav-item">
								<a class="nav-link active" aria-current="page" href="{{ path('app_home') }}">Accueil</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{ path('app_veterinary_index') }}">Les vétérinaires</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{ path('app_follow_up_index') }}" title="Le suivi">Le suivi</a>
							</li>

							<li class="nav-item">
								<a class="nav-link" href="{{ path('app_goal_index') }}" title="Les produits">Les objectifs</a>
							</li>


							<li class="nav-item">
								<a class="nav-link" href="{{ path('app_product_index') }}" title="Les produits">Les produits</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{ path('app_activity_index') }}" title="Les activités">Les activités</a>
							</li>
							{% if is_granted('ROLE_ADMIN') %}
								<li class="nav-item">
									<a class="nav-link" href="{{ path('app_user_index') }}" title="Les utilisateurs">Les utilisateurs</a>
								</li>
							{% endif %}
							<li class="nav-item dropdown">
								<a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
									Tableau de bord
								</a>
								<ul class="dropdown-menu">
									<li>
										<a class="dropdown-item" href="{{ path('app_dashboard_followups') }}">Nb suivis par vétérinaire</a>
									</li>
									<li>
										<a class="dropdown-item" href="{{ path('app_dashboard_indicators') }}">Autres indicateurs</a>
									</li>
								</ul>
							</li>
							<li class="nav-item dropdown">
								<a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
									Divers
								</a>
								<ul class="dropdown-menu">
									<li>
										<a class="dropdown-item" href="{{ path('app_search_by_activity') }}">Les vétérinaires par activités</a>
									</li>
									<li>
										<a class="dropdown-item" href="{{ path('app_search_by_category') }}">Les vétérinaires par catégorie</a>
									</li>
								</ul>
							</li>
							{% if app.user %}
								<li class="nav-item">
									<a class="nav-link fw-semibold" href="{{ path('app_logout')}}" alt="Déconnexion" title="Deconnexion">Déconnexion</i></a>
								</li>
							{% else %}
								<li class="nav-item">
									<a class="nav-link fw-semibold" href="{{ path('app_login')}}" alt="Connexion" title="Connexion">Connectez-vous</a>
								</li>
							{% endif %}
						</ul>
					</div>
				</div>
			</nav>
	</body>
</html>

